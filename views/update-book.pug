extends layout

block content
  h1 Update Book
  if(errors)
    h2.error Ooops an error occured!
    ul.error
      each error in errors
        li
          =error.message
  form(action="/books/" + book.id + "?_method=PUT", method="post")
    p
      label(for='title') Title
      input#title(name='title', type='text', value=book.title)
    p
      label(for='author') Author
      input#author(name='author', type='text', value=book.author)
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value=book.genre)
    p
      label(for='year') Year
      input#year(name='year', type='text', value=book.year)
    p
      input(type='submit', value='Update Book')
  form(action="/books/" + book.id + "?_method=DELETE", method="post", onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/books') Cancel
    p
      input(type='submit', value='Delete Book')
